<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/custom.css" />
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Simple Starting Sample", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>
                        @Html.ActionLink("List of People", "StudentList", "Student", new { area = "" }, new { @class = "nav-link" })
                    </li> <!-- Added to the menu -->
                    <!-- Dropdown for student details -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="peopleDropdown" role="button" data-bs-toggle="dropdown"
                           List of People
                        </a>
                        <ul class="dropdown-menu"
                            <!-- Each person is a sub-menu item -->
                            <li><a href="@Html.ActionLink("StudentList", "Student")> Complete List of People</a></li>
                            <li><a href="~/HTML/LolaAlkov.html">Lola Alkov</a></li>
                            <li><a href="~/HTML/ArielleTatum.html">Arielle Tatum</a></li>
                            <li><a href="~/HTML/MarialynnVewesse.html">Marialynn Vewesse</a></li>
                            <li><a href="~/HTML/KamoNkomo.html">Kamo Nkomo</a></li>
                            <li><a href="~/HTML/PetrusChabedi.html">Petrus Chabedi</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
